{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "opener:default",
    "core:window:allow-start-dragging",
    "fs:default",
    {
      "identifier": "fs:allow-exists",
      "allow": [
        {
          "path": "$APPCONFIG"
        },
        {
          "path": "$APPCONFIG/**"
        }
      ]
    },
    {
      "identifier": "fs:allow-read-text-file",
      "allow": [
        {
          "path": "$APPCONFIG"
        },
        {
          "path": "$APPCONFIG/**"
        }
      ]
    },
    {
      "identifier": "fs:allow-write-text-file",
      "allow": [
        {
          "path": "$APPCONFIG"
        },
        {
          "path": "$APPCONFIG/**"
        }
      ]
    },
    {
      "identifier": "fs:allow-mkdir",
      "allow": [
        {
          "path": "$APPCONFIG"
        },
        {
          "path": "$APPCONFIG/**"
        }
      ]
    },
    "sql:default",
    "sql:allow-execute"
  ]
}